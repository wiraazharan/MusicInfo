<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.music.wiraazharan.dcprojects" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/musicegg"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MusicService" />

        <activity
            android:name=".Splashscreen"
            android:label="@string/title_activity_splashscreen" >
        </activity>
        <activity android:name=".toptracks.TopChart"/>
        <activity android:name=".artisttopsong.ArtistTopSong"/>
    </application>

</manifest>

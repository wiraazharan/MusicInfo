<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3f3f43"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/topmost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kplayer"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/gototoptracks"
            android:layout_marginTop="30dp"
            android:text="Top Chart" />

        <Button
            android:id="@+id/gotoartistinfo"
            android:layout_marginTop="30dp"
            android:text="Artist info" />

    </TableLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/topmost">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_marginBottom="30dp">

                <TextView
                    android:text="Title"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:text="Artist"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:text="Duration"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/one"
                    android:layout_marginBottom="10dp"
                    android:text="Wake Me Up"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/artistone"
                    android:layout_marginBottom="10dp"
                    android:text="Kurama"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/durationone"
                    android:layout_marginBottom="10dp"
                    android:text="4:00 min"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/two"
                    android:layout_marginBottom="20dp"
                    android:text="Monster"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/artisttwo"
                    android:layout_marginBottom="10dp"
                    android:text="Kurama"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/durationtwo"
                    android:layout_marginBottom="10dp"
                    android:text="4:00 min"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/three"
                    android:layout_marginBottom="20dp"
                    android:text="Trumpet"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/artistthree"
                    android:layout_marginBottom="10dp"
                    android:text="Kurama"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/durationthree"
                    android:layout_marginBottom="10dp"
                    android:text="4:00 min"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/four"
                    android:layout_marginBottom="20dp"
                    android:text="Brokenheart"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/artistfour"
                    android:layout_marginBottom="10dp"
                    android:text="Kurama"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/durationfour"
                    android:layout_marginBottom="10dp"
                    android:text="4:00 min"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/five"
                    android:layout_marginBottom="20dp"
                    android:text="Thinking Out Loud"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/artistfive"
                    android:layout_marginBottom="10dp"
                    android:text="Kurama"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/durationfive"
                    android:layout_marginBottom="10dp"
                    android:text="4:00 min"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/six"
                    android:layout_marginBottom="20dp"
                    android:text="Photograph"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/artistsix"
                    android:layout_marginBottom="10dp"
                    android:text="Kurama"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/durationsix"
                    android:layout_marginBottom="10dp"
                    android:text="4:00 min"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


            </TableRow>


        </TableLayout>


    </ScrollView>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/playstop"
            android:layout_width="50dp"
            android:layout_height="50dp"


            />


    </LinearLayout>

</RelativeLayout>
